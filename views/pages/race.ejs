<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
    <header>
        <% include ../partials/header %>
    </header>
        <div class="span10"><br/>
            <table class="table table-hover">
                <thead>
                        <tr>
                            <th>Name</th>
                            <th>Created At</th>
                            <th>Participants</th>
                            <th>Bars</th>
                            <th><input type="button" class="btn btn-success" value="Aanmaken" onclick="location.href='/postcodebeheer/create'" /></th>
                        </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < data.length; i++) { %>
                        <tr>
                            <td scope="row"><%= data[i].name %></td>
                            <td><%= data[i].created_at.toISOString().replace(/T/, ' ').replace(/\..+/, '') %></td>
                            <td><%= data[i].participants.length %></td>
                            <td><%= data[i].bars.length %></td>
                            <td><a href="/races/<%= data[i]._id %>" class="btn btn-warning"><span class="fa fa-user"></span>details</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>


    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>